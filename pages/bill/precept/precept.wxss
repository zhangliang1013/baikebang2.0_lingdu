/* pages/spa/order/program/index.wxss */
/*public*/
.mb-bg-20 {
  width: 100%;
  height: 20rpx;
  background: #f3f3f3;
}
.bb {
  border-bottom: 1rpx solid #eee;
}
.program-box {
  padding: 0 34rpx;
}

.cell {
  width: 100%;
  /* height: 104rpx; */
  height: 90rpx;
  display: flex;
  align-items: center;
}
.cell-val{
  font-size:24rpx;
font-family:Source Han Sans CN;
font-weight:400;
color:rgba(52,52,52,1);
}
.cell-name {
  margin-right: auto;
  font-size:24rpx;
font-family:Source Han Sans CN;
font-weight:400;
color:rgba(52,52,52,1);
}
.cell-icon {
  margin-left: 5rpx;
}
.cell-textarea {
  padding: 20rpx;
  background-color: #156df2;
  border-radius: 20rpx;
}
.cell-textarea >textarea ,.cell-textarea >.textarea{
  font-size: 28rpx;
  color: #fff;
  width: 100%;
  line-height: 30rpx;
  min-height: 180rpx;
}
.btn_title {
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  font-size: 12px;
  justify-content: space-around;
}
.btn_title text {
  display: inline-block;
  height: 60rpx;
  line-height: 21rpx;
  width: 200rpx;
   text-align: center;
   border:1rpx solid rgba(116,168,247,1);
  color: #b1cefa;
  border-radius: 40rpx;
}
.active_text {
  /* border : 1px solid red; */
  color: #fff;
  background-color: #156df2;
}
.head_img {
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  display:inline-block;
   margin-right: 20rpx;
   vertical-align: center;
}
.name_title {
  position: relative;
  top: -12rpx;
  font-size:24rpx;
font-family:Source Han Sans CN;
font-weight:400;
color:rgba(52,52,52,1);
}
 .value_input input  {
   padding-left: 20rpx;
  width: 150rpx !important;
}
.wai_quan {
  height: 26rpx;
  line-height: 26rpx;
  width: 26rpx;
  /* border-radius: 13rpx; */
  border-radius:50%;
  text-align: center;
  border : 1px solid #b1cefa;
}
.li_quan {
   display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-radius: 50%;
  background-color:#156df2 ;
  margin-left: 2rpx;
}
.login_btn{
 width:682rpx;
height:64rpx;
background:linear-gradient(0deg,rgba(22,110,242,1) 0%,rgba(42,127,255,1) 100%);
border-radius:32rpx;
font-size:30rpx;
font-family:Source Han Sans CN;
font-weight:500;
color:rgba(255,255,255,1);
text-align: center;
line-height: 64rpx;
margin-top: 60rpx;
}
.row_text image{
width: 17rpx;
height: 32rpx;
margin-left: 15rpx;
margin-bottom: -4rpx;
}
.images {
  margin-top: 15rpx;
  display: flex;
  /* padding: 0 0 21rpx 21rpx; */
}
.images > view{
  width: 60rpx;
  height: 60rpx;
  /* margin-left: 20rpx; */
   margin-right: 15rpx;
}
.images > view image{
  width: 60rpx;
  height: 60rpx;
}
.images  .join_img {
   text-align: center;
   line-height: 58rpx;
   font-size: 40rpx;
   color:rgba(255,255,255,1);
   border: 1rpx solid rgba(255,255,255,1);
}