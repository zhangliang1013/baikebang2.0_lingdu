.main {
  background: rgba(248, 248, 248, 1);
  height: 100vh;
  width: 100vw;
}

.header .fanhui {
  position: absolute;
  left: 40rpx;
  top: 80rpx;
  width: 17rpx;
  height: 32rpx;
  z-index: 99;
}

.header .fanhui image {
  width: 100%;
  height: 100%;
}

.header {
  padding-top: 184rpx;
  box-sizing: border-box;
  position: relative;
  width: 750rpx;
  height: 330rpx;
  background: linear-gradient(0deg, rgba(22, 110, 242, 1) 0%, rgba(42, 128, 255, 1) 100%);
}

.header .title_name {
  font-size: 32rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  width: 130rpx;
  position: absolute;
  top: 68rpx;
  left: 50%;
  transform: translateX(-50%);
}

.header .content {
  /* margin-top: 184rpx; */
  display: flex;
  justify-content: space-around;
}

.header .content .item {
  width: 33.33%;
  border-right: 1rpx solid rgba(255, 255, 255, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 42rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  height: 80rpx;
  margin-top: 10rpx;
}
.header .content .item1{
  border-right: none;
}
.header .content .item .top {
  margin-top: -18rpx;
  margin-bottom: 15rpx;
}

.header .content .item .bottom {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}
.main .container{
  padding: 0 35rpx;
  background-color: #fff;
}
.main .container .row{
  display: flex;
  justify-content: space-between;
  font-size:26rpx;
font-family:Source Han Sans CN;
font-weight:400;
color:rgba(51,51,51,1);
padding: 40rpx 0;
}
.main .container .row .right{
  width: 15rpx;
  height: 28rpx;
}
.main .container .row .right image{
  width: 100%;
  height: 100%;
}
.left1{
  position: relative;
}
.left1 text{
  display: inline-block;
  width:26rpx;
height:20rpx;
background:rgba(255,56,56,1);
border-radius:9rpx;
font-size:18rpx;
font-family:Source Han Sans CN;
font-weight:400;
color:rgba(255,255,255,1);
line-height: 20rpx;
text-align: center;
position: absolute;
top: -4rpx;
right: -26rpx;
}