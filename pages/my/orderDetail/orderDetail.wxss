/* pages/my/orderDetail/orderDetail.wxss */
.main {
  background: rgba(244, 244, 244, 1);
  width: 100vw;
  height: 100vh;
  padding-top: 40rpx;
}

.main .box {
  padding: 30rpx 21rpx;
  box-sizing: border-box;
  margin: 0 auto;
  /* margin-top: 40rpx; */
  width: 682rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 10rpx 27rpx 0rpx rgba(19, 93, 241, 0.21);
  border-radius: 30rpx;
}

.main .box .row {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  padding: 17rpx 0;
}

.main .box .row .right {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.main .box .row .right1 {
  color: #156DF2;
}

.main .box .row .right2 {
  color: #73A8F7;
}