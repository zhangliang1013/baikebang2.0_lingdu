/* pages/my/rules/rules.wxss */
.main {
  height: 100vh;
  width: 100vw;
  background:rgba(248,248,248,1);
}
.main .header{
  padding: 49rpx 35rpx;
  box-sizing: border-box;
  width:750rpx;
height:240rpx;
background:linear-gradient(0deg,rgba(21,109,242,1) 0%,rgba(42,127,255,1) 100%);
}
.main .header .title{
  width: 200rpx;
  font-size:36rpx;
font-family:Source Han Sans CN;
font-weight:bold;
color:rgba(255,255,255,1);
position: relative;
}
.main .header .title text{
  display: inline-block;
font-size:18rpx;
font-family:Source Han Sans CN;
font-weight:400;
color:rgba(248,248,248,1);
width:20rpx;
height:20rpx;
line-height: 20rpx;
text-align: center;
border:1rpx solid rgba(248,248,248,1);
border-radius:50%;
position: absolute;
top : -2rpx;
right: 20rpx;
}
.main .header .fenshu{
  font-size:72rpx;
  font-family:Source Han Sans CN;
  font-weight:bold;
  color:rgba(255,255,255,1);
  margin-top: 30rpx;
}
.row {
  display: flex;
  justify-content: space-between;
  padding: 39rpx 34rpx;
  background-color: #fff;
  font-size:24rpx;
font-family:Source Han Sans CN;
font-weight:500;
color:rgba(51,51,51,1);
}
.row .right{
  width: 15rpx;
  height: 28rpx;
}
.row .right image{
  width: 100%;
  height: 100%;
}