/* pages/my/leaveList/leaveList.wxss */
.main {
  background: rgba(248, 248, 248, 1);
  width: 100vw;
  height: 100vh;
}

.main .row {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  padding: 25rpx 35rpx;
  align-items: center;
  border-bottom: 1rpx solid rgba(238, 238, 238, 1);
}

.main .row:last-child {
  border-bottom: none;
}

.main .row .left {
  display: flex;
}

.main .row .left .one {
  width: 110rpx;
  height: 110rpx;
  margin-right: 25rpx;
}

.main .row .left .one image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.main .row .left .two {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}
.main .row .left .two .top{
  margin-top: 6rpx;
}
.main .row .left .two .bottom {
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  margin-top: 28rpx;
}

.main .row .right {
  width: 14rpx;
  height: 25rpx;
}

.main .row .right image {
  width: 100%;
  height: 100%;
}
.wuren {
  padding-top: 60rpx;
  text-align: center;
  width: 100%;
}