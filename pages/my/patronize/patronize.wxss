/* pages/my/patronize/patronize.wxss */
.mian {
  height: 100vh;
  width: 100vw;
  background: rgba(248, 248, 248, 1);
}

.mian .header {
  padding: 20rpx 34rpx;
  display: flex;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  background-color: #fff;
  height: 120rpx;
}

.mian .header .item {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.mian .header .item .bottom {
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-top: -10rpx;
}

.mian .header image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.title {
  padding: 20rpx 0;
  padding-left: 34rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.mian .footer {
  background-color: #fff;
  /* padding: 0 34rpx; */
}

.mian .footer .row {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  border-bottom: 1rpx solid rgba(238, 238, 238, 1);
  padding: 30rpx 34rpx;
}

.mian .footer .row:last-child {
  border-bottom: none;
}

.mian .footer .row:last-child {
  border-bottom: none;
}

.mian .footer .row .right {
  margin-top: 3rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.wuren {
  text-align: center;
  padding: 15rpx 0;
  margin-top: 60rpx;
  width: 100%;
}