/* pages/my/round/round.wxss */
.mian {
  width: 100vw;
  height: 100vh;
  background:rgba(248,248,248,1);
}
.mian  .header {
  display: flex;
  flex-direction: column;
  align-items: center;
  width:750rpx;
height:240rpx;
background:linear-gradient(0deg,rgba(21,109,242,1) 0%,rgba(42,127,255,1) 100%);
}
.mian  .header .one {
  font-size:64rpx;
font-family:Source Han Sans CN;
font-weight:bold;
color:rgba(255,255,255,1);
margin-top: 69rpx;
margin-bottom: 20rpx;
}
.mian  .header .two {
  font-size:28rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.mian .content .title {
  font-size:28rpx;
font-family:Source Han Sans CN;
font-weight:500;
color:rgba(51,51,51,1);
 padding:20rpx 35rpx;
}
.mian .content .row {
  display: flex;
  background-color: #fff;
  justify-content: space-between;
  padding:15rpx 40rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.mian .content .row:last-child{
  border-bottom:none;
}
.mian .content .row .left {
  display: flex;
  font-size:28rpx;
font-family:Source Han Sans CN;
font-weight:500;
color:rgba(51,51,51,1);
}
.mian .content .row .left .item {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.mian .content .row .left .item .bottom {
  font-size:24rpx;
font-family:Source Han Sans CN;
font-weight:500;
color:rgba(51,51,51,1);
margin-top: -10rpx;
}
.mian .content .row .left image{
   width: 120rpx;
   height: 120rpx;
   margin-right: 20rpx;
   border-radius: 50%;
}
.mian .content .row .right {
  height: 130rpx;
  display: flex;
  align-items: center;
}
.mian .content .row .right image{
  width: 18rpx;
  height: 28rpx;
}