/* pages/my/commentHide/commentHide.wxss */
.main {
  background:rgba(248,248,248,1);
  height: 100vh;
  width: 100vw;
}
.main .container{
  padding: 34rpx;
}
.main .container .header{
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
  padding-left: 20rpx;
}
.main .container .header .left{
  display: flex;
}
.main .container .header .left .one{
  width: 80rpx;
  height: 80rpx;
  margin-right: 15rpx;
}
.main .container .header .left .one image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.main .container .header .left .two{
  font-size:24rpx;
font-family:Source Han Sans CN;
font-weight:500;
color:rgba(51,51,51,1);
}
.main .container .header .left .two .bottom{
  font-size:20rpx;
font-family:Source Han Sans CN;
font-weight:500;
color:rgba(51,51,51,1);
margin-top: 20rpx;
}
.main .container .header .right{
  font-size:20rpx;
font-family:Source Han Sans CN;
font-weight:500;
color:rgba(51,51,51,1);
}
.main .container .content{
  margin-top: 42rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  font-size:20rpx;
font-family:Source Han Sans CN;
font-weight:400;
color:rgba(51,51,51,1);
}
.main .container  .imgs{
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid rgba(238,238,238,1);
  display: flex;
}
.main .container  .imgs .img{
   width: 88rpx;
   height: 88rpx;
   margin-right: 15rpx;
}
.main .container  .imgs .img image{
  width: 100%;
  height: 100%;
  border-radius:10rpx;
}
.main .container .title{
  padding-left: 3rpx;
  margin-top: 50rpx;
  font-size:28rpx;
font-family:Source Han Sans CN;
font-weight:400;
color:rgba(51,51,51,1);
}
.main .container .textarea{
  width:682rpx;
height:280rpx;
background:rgba(115,168,247,1);
border-radius:20rpx;
margin-top: 20rpx;
padding: 19rpx 21rpx;
box-sizing: border-box;
}
.main .container .textarea textarea{
  width: 100%;
  height: 100%;
  font-size:24rpx;
font-family:Source Han Sans CN;
font-weight:500;
color:rgba(255,255,255,1);
}

.main .btn{
  width:682rpx;
height:70rpx;
background:linear-gradient(0deg,rgba(21,109,242,1) 0%,rgba(42,127,255,1) 100%);
border-radius:35rpx;
font-size:28rpx;
font-family:Source Han Sans CN;
font-weight:400;
color:rgba(255,255,255,1);
text-align: center;
line-height: 70rpx;
margin: 50rpx auto;
}